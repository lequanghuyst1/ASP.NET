
@{
    ViewBag.Title = "FormRegis";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Add new student</h2>
<br />

@using (Html.BeginForm("DisplayAStudent","School"))
{
    <table>
        <tr>
            <td>@Html.Label("Student ID")</td>
            <td>@Html.TextBox("SID")</td>
        </tr>
        <tr>
            <td>@Html.Label("Student Name")</td>
            <td>@Html.TextBox("Name")</td>
        </tr>

        <tr>
            <td>@Html.Label("Age")</td>
            <td>@Html.TextBox("Age")</td>
        </tr>
        <tr>
            <td>@Html.Label("Address")</td>
            <td>@Html.TextBox("Address")</td>
        </tr>

        <tr>
            <td></td>
            <td style="padding:10px;">
                <input type="submit" value="Regis" />
                <input type="reset" value="Cancel" />
            </td>
        </tr>
    </table>

}

