
@{
    ViewBag.Title = "TienDien";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .result {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    table {
        border-radius: 10px;
        width: 40%;
        margin-top: 20px;
    }

    th, td {
        padding: 8px 8px;
        font-size: 16px;
    }
</style>
<div class="result">
    <table>
        <tr>
            <td>Chủ hộ</td>
            <td>@ViewBag.hoten</td>
        </tr>
        <tbody>
            <tr>
                <td>Số điện tiêu thụ</td>
                <td>@ViewBag.sodien</td>
            </tr>
            <tr>
                <td>Tiền phải trả</td>
                <td>@ViewBag.Tiendien</td>
            </tr>
        </tbody>

    </table>
</div>