
@{
    ViewBag.Title = "NhapThongTin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .input_info{

        display:flex;
        justify-content:center;
        align-items:center;
    }
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    table {
        border-radius: 10px;
        width:100%;
        margin-top:20px;

    }

    th, td {
        padding: 8px 8px;
        font-size: 16px;
    }
</style>
<div class="input_info">
   
        <form style="width:50%" action="~/TinhTienDien/TienDien" method="post">
            <table >
                <thead>
                    <tr>
                        <th colspan="3"><h3 style="text-align:center">Tính tiền điện</h3></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Họ tên chủ hộ:</td>
                        <td><input type="text" name="txtHoTen" value="" /></td>
                        <td><input type="checkbox" value="true" name="check_ho" />Hộ ưu tiên</td>
                    </tr>
                    <tr>
                        <td>Loại điện tiêu thụ:</td>
                        <td colspan="2">
                            <select name="loaidien">
                                <option value="Sinh hoạt">Sinh hoạt</option>
                                <option value="Kinh doanh">Kinh doanh</option>
                                <option value="Sản xuất">Sản xuất</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>Vào chỉ số cũ:</td>
                        <td colspan="2">
                            <input type="text" name="txtSocu"> KW
                        </td>
                    </tr>
                    <tr>
                        <td>Vào chỉ số mới:</td>
                        <td colspan="2">
                            <input type="text" name="txtSomoi"> KW
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td style="text-align:center" colspan="3">
                            <input type="submit" value="Tính" />
                        </td>
                    </tr>
                </tfoot>
            </table>
        </form>
    
</div>