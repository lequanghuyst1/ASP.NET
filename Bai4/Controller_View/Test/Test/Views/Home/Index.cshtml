@model IEnumerable<Test.Models.Student>
@using Test.Models;
@{
    ViewBag.Title = "Index";
    List<Student> lst = ViewBag.lst;
}

<h2>Index</h2>
<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 5px;
    }
</style>
<table width="400px">
    <tr>
        <th>Mã sinh viên</th>
        <th>Họ tên</th>
        <th>Quê Quán</th>
    </tr>
    @foreach (var item in lst)
    {
        <tr>
            <td>@item.MaSV</td>
            <td>@item.HoTen</td>
            <td>@item.QueQuan</td>
        </tr>
    }
</table>
